<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kursach_6th_sem" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/pink</item>
    </style>
    <style name="Margins" parent  = "Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="Button" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/button_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="CustomButton" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/custom_button_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="Title" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/pink</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Card" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/custom_card_view_light</item>
    </style>
    <style name="CardColor" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SearchView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/search_view_light</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>

