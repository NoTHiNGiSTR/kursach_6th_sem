<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kursach_6th_sem" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:background">@color/darkPurple</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Margins" parent  = "Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Button" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="CustomButton" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/custom_button_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Title" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Card" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/custom_card_view_dark</item>
    </style>

    <style name="CardColor" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">#534C57</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/search_view_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>